@model IEnumerable<hcsaha.DAL.saatler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.saat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.saat)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.saatID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.saatID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.saatID })
        </td>
    </tr>
}

</table>
