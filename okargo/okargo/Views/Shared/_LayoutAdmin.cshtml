
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Onur Kargo </title>
    <!-- Core CSS - Include with every page -->
    <link href="~/assets/plugins/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/plugins/pace/pace-theme-big-counter.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/main-style.css" rel="stylesheet" />
    <!-- Page-Level CSS -->
    <link href="~/assets/plugins/morris/morris-0.4.3.min.css" rel="stylesheet" />
</head>
<body>
    <!--  wrapper -->
    <div id="wrapper" style="background-color:#b56969">
        <!-- navbar top -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar"style="background-color:#22264b;">
            <!-- navbar-header -->
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- end navbar-header -->
            <!-- navbar-top-links -->
            <!-- end navbar-top-links -->

        </nav>
        <!-- end navbar top -->
        <!-- navbar side -->
        @if (Session["kullanici"] == "var")
        {<nav class="navbar-default navbar-static-side" role="navigation">
            <!-- sidebar-collapse -->
            <div class="sidebar-collapse" style="background-color:#b56969">
                <!-- side-menu -->
                <ul class="nav" id="side-menu" style="background-color:#b56969">
                    <li>
                        <!-- user image section-->
                        <div class="user-section">
                            <div class="user-section-inner">
                                <img src="~/Content/user.jpg" alt="">
                            </div>
                            <div>
                                <div class="user-text-online col-lg-6" style="margin-top:15px">
                                    <span class="user-circle-online btn btn-success btn-circle "></span>&nbsp;Aktif
                                </div>
                                <div class="user-info">
                                    @{
                                        <div><h4><strong>@ViewBag.bilgi</strong></h4></div>}

                                    </div>
                                </div>
                            </div>
                            <!--end user image section-->
                        </li>

                        <li class="selected">
                            <a href="/Home/Anasayfa"><i class="fa fa-dashboard fa-fw"></i>Anasayfa</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Kargo İşlemler<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/paketlers/Create">Kargo Al</a>
                                </li>
                                <li>
                                    <a href="/paketlers/Index">Tüm Liste</a>
                                </li>
                            </ul>

                            <!-- second-level-items -->
                        </li>
                        @if (Session["calisan"] == "yonetici")
                        {
                            <li>
                                <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Personel İşlemleri<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="/personels/Create">Personel Ekle</a>
                                    </li>
                                    <li>
                                        <a href="/personels/Index">Personel Listesi</a>
                                    </li>
                                </ul>

                                <!-- second-level-items -->
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Resim İşlemleri<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="/Sliders/Create">Resim Ekle</a>
                                    </li>
                                    <li>
                                        <a href="/Sliders/Index">Resim Listesi</a>
                                    </li>
                                </ul>

                                <!-- second-level-items -->
                            </li>
                        }
                        <li>
                            @using (Html.BeginForm())
                            {
                                @Html.ActionLink("Çıkış", "CikisYap", "Home", null, new { @class = " fa fa-user fa-fw navbar-brand" })
                            }
                        </li>
                    </ul>
                    <!-- end side-menu -->
                </div>
                <!-- end sidebar-collapse -->
            </nav>

                                        }


        <!-- end navbar side -->
        <!--  page-wrapper -->
        @RenderBody()
        <!-- end page-wrapper -->

    </div>
    <!-- end wrapper -->
    <!-- Core Scripts - Include with every page -->
    <script src="~/assets/plugins/jquery-1.10.2.js"></script>
    <script src="~/assets/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/assets/plugins/metisMenu/jquery.metisMenu.js"></script>
    <!-- Page-Level Plugin Scripts-->
    <script src="~/assets/scripts/siminta.js"></script>
    <script src="~/assets/scripts/dashboard-demo.js"></script>
    <script src="~/assets/plugins/morris/morris.js"></script>
    <script src="~/assets/plugins/morris/raphael-2.1.0.min.js"></script>

</body>

</html>
