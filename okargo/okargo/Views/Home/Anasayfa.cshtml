@model List<okargo.DAL.paketler>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper" style="background-color:#e6cf8b;">

    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header text-center">Dağıtıma Çıkacak Kargolar</h1>
        </div>
        <!--End Page Header -->
    </div>


    <p>
        @Html.ActionLink("Kargo Al", "Create","paketlers")
    </p>
    <table class="table">
        <tr>
            <th>
                Takip no
            </th>
            <th>
                Tc kimlik no
            </th>
            <th >
                Gönderici Adı
            </th>
            <th>
                Gönderici Soyadı
            </th>
            <th>
                Alıcı Adı Soyadı
            </th>
            <th>
                Adres
            </th>
            <th>
                Nerede
            </th>
            <th>
                Tutar
            </th>
            <th>
                Ağırlık
            </th>
            <th>
                Nereden
            </th>
            <th>
                Nereye
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.gonderi_no)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soyadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aliciadisoyadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nerede)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fiyat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.agirlik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sehirler.sehir)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sehirler1.sehir)
                </td>
                <td>
                    @Html.ActionLink("Detay", "Details", "paketlers", new { id = item.gonderiID })|

                @if (Session["calisan"] == "yonetici")
                {
                    @Html.ActionLink("Güncelle", "Edit","paketlers", new { id = item.gonderiID })

                    @Html.ActionLink("Sil", "Delete", "paketlers", new { id = item.gonderiID })

                }

            </td>
        </tr>
        }

    </table>
</div>


