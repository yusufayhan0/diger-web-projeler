@model okargo.DAL.personel
@{
    ViewBag.Title = "Giriş";
    Layout = null;
}

<body class="body-Login-back">

    <div class="container">

        <div class="row">
            <h1 class="text-center">Onur Kargo'ya hoş geldiniz</h1>
            <div class="col-md-4 col-md-offset-4">

                <div class="login-panel panel panel-default">
                    
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Giriş Yap</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())

                        {  <div class="form-group ">
                            @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mail" } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şifre", type = "password" } })
                        </div>
                                <!-- Change this to a button or input when using this as a form -->
                            <input id="Button1" type="submit" class="btn btn-lg btn-success btn-block" value="Giriş" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="assets/plugins/jquery-1.10.2.js"></script>
    <script src="assets/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="assets/plugins/metisMenu/jquery.metisMenu.js"></script>

</body>

